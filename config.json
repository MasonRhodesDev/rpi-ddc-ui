{
  "layout": {
    "rows": 3,
    "columns": 3,
    "button_spacing": 10,
    "background_color": "#2E3440",
    "fullscreen": true,
    "hide_cursor": false
  },
  "display": {
    "mode": "single",
    "primary_display": "DSI-1",
    "kiosk_mode": true,
    "auto_start": true
  },
  "buttons": [
    {
      "name": "Switch to Personal",
      "label": "Switch to Personal",
      "action": "command",
      "command": "@/switch_to_personal.sh",
      "icon": "icons/terminal.png",
      "color": "#88C0D0", 
      "text_color": "#ECEFF4",
      "position": [0, 0]
    },
    {
      "name": "Switch to Work",
      "label": "Switch to Work",
      "action": "command",
      "command": "@/switch_to_work.sh",
      "icon": "icons/browser.png",
      "color": "#5E81AC",
      "text_color": "#ECEFF4",
      "position": [0, 1]
    },
    {
      "name": "Toggle PIP",
      "label": "Toggle PIP",
      "action": "command",
      "command": "@/toggle_pip.sh",
      "icon": "icons/files.png",
      "color": "#A3BE8C",
      "text_color": "#2E3440",
      "position": [0, 2]
    },
    {
      "name": "System Info",
      "label": "System Info",
      "action": "command",
      "command": "echo 'System Info' && uptime && free -h",
      "icon": "icons/monitor.png",
      "color": "#B48EAD",
      "text_color": "#ECEFF4",
      "position": [1, 0]
    },
    {
      "name": "Reboot",
      "label": "Reboot",
      "action": "reboot",
      "command": "sudo reboot",
      "icon": "icons/reboot.png",
      "color": "#BF616A",
      "text_color": "#ECEFF4",
      "position": [1, 1]
    },
    {
      "name": "Shutdown",
      "label": "Shutdown",
      "action": "shutdown",
      "command": "sudo shutdown -h now",
      "icon": "icons/shutdown.png",
      "color": "#D08770",
      "text_color": "#2E3440",
      "position": [1, 2]
    }
  ]
} 